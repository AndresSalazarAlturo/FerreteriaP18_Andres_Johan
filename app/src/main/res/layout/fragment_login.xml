<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ui.fragments.AdminFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitleLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textTitleLogin"
                android:textSize="@dimen/textTitle"
                android:textColor="@color/loginTextColor"
                android:gravity="center_horizontal"
                android:layout_margin="@dimen/defaultLayoutMargin"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_margin="@dimen/defaultLayoutMargin"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_large" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultLayoutMargin"
                android:gravity="center_horizontal"
                android:text="Usuario"
                android:textColor="@color/loginTextColor"
                android:textSize="@dimen/textSizeAdmin" />

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/defaultLayoutMargin"
                android:gravity="center_horizontal"
                android:text="ContraseÃ±a"
                android:textColor="@color/loginTextColor"
                android:textSize="@dimen/textSizeAdmin" />

            <Button
                android:id="@+id/btSaveAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/defaultLayoutMargin"
                android:background="@color/buttonBackground"
                android:text="@string/login"
                android:textColor="@color/buttonTextColor" />

        </LinearLayout>

    </ScrollView>
</FrameLayout>



